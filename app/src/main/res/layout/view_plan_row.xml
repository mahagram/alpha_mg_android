<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp"
    android:id="@+id/holderCon">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvPlanPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="129"
            android:textSize="18sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="@dimen/text_size16"
            android:fontFamily="@font/amiko_bold"
            android:background="@drawable/plan_price_bg"/>

        <TextView
            android:id="@+id/btnSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:background="@drawable/select_bg_button"
            android:paddingLeft="16dp"
            android:paddingRight="@dimen/text_size16"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/text_size16"
            android:fontFamily="@font/amiko_bold"
            android:textColor="@color/colorPrimary"/>

        <View
            android:id="@+id/line"
            android:layout_below="@id/tvPlanPrice"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="0dp"
                android:layout_weight="8.5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size16"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Now get truly Unlimited Local/National "/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imgExpand"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:rotation="270"
                    android:background="@drawable/arrow_expand"
                    android:textAllCaps="false"
                    android:padding="5dp"
                    android:layout_margin="@dimen/text_size16"/>
            </LinearLayout>


        </LinearLayout>
        <!--            -->
    </RelativeLayout>
</androidx.cardview.widget.CardView>