<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:title="Money Transfer"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Sender Name"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/sendername"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/ligh_border"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"

                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Sender Number"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/sendernumber"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/ligh_border"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"

                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Beneficiary Name"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/benenametext"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/ligh_border"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"

                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Account Number"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/accountnumber"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/ligh_border"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"

                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Bank Name"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/bankname"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/ligh_border"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="16sp" />

            <TextView
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Select mode:"
                android:textSize="14sp" />

            <RadioGroup
                android:visibility="gone"
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/ligh_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <RadioButton
                    android:id="@+id/radiobutton_imps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="IMPS" />

                <RadioButton
                    android:id="@+id/radiobutton_neft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEFT" />
            </RadioGroup>

            <EditText
                android:id="@+id/editamount"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/ligh_border"
                android:hint="Enter amount"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:inputType="numberDecimal"
                android:maxLines="1" />

            <Button
                android:id="@+id/sendbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_bg"
                android:text="Send Now"
                android:textStyle="bold"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
