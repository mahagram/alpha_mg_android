<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Details"
        android:textColor="@color/black"
        android:layout_margin="@dimen/text_size16"
        android:textSize="@dimen/text_size16"/>

    <ImageView
        android:id="@+id/imgCancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cross_icon"
        android:background="@drawable/circle_bg"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_below="@+id/lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_size16"
        android:text="$149"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <View
        android:id="@+id/line"
        android:layout_below="@id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gray"
        android:layout_marginTop="@dimen/text_size16"/>

    <TextView
        android:id="@+id/tvDes"
        android:layout_below="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size16"
        android:layout_marginTop="5dp"
        android:text="Description"
        android:textSize="14sp"
        android:fontFamily="monospace"/>

    <TextView
        android:id="@+id/tvDetail"
        android:layout_below="@+id/tvDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size16"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:layout_marginRight="@dimen/text_size16"
        android:layout_marginBottom="@dimen/text_size16"
        android:text="Now get truly Unlimited Local/National Calls to all Netqork +2gb DAta + Vali28 Days"/>

    <Button
        android:id="@+id/btnSelect"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/tvDetail"
        android:layout_marginLeft="@dimen/text_size16"
        android:layout_marginRight="@dimen/text_size16"
        android:layout_marginBottom="50dp"
        android:text="Select Plan"
        android:fontFamily="@font/amiko_bold"
        android:textAllCaps="false"/>
</RelativeLayout>